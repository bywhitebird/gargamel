{
  "name": "kazam",
  "description": "Create reusable components for multiple frameworks and libraries using a single codebase.",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "examples/*"
  ],
  "packageManager": "pnpm@7.15.0",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "test": "turbo run test",
    "prepare": "husky install",
    "prerelease": "turbo run build test && changeset version",
    "release:npm": "changeset publish",
    "release:others": "turbo run release",
    "release": "run-p release:*"
  },
  "dependencies": {
    "@changesets/cli": "^2.26.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@whitebird/eslint-config": "latest",
    "@whitebird/tsconfig": "latest",
    "eslint": "8.46.0",
    "husky": "^8.0.3",
    "npm-run-all": "^4.1.5",
    "turbo": "latest",
    "typescript": "^5.1.6",
    "unbuild": "^1.2.1"
  },
  "pnpm": {
    "overrides": {
      "@antfu/eslint-config": "0.43.1"
    },
    "patchedDependencies": {
      "ink@4.4.1": "patches/ink@4.4.1.patch",
      "@storybook/react-vite@7.5.1": "patches/@storybook__react-vite@7.5.1.patch",
      "@edgedb/generate@0.4.1": "patches/@edgedb__generate@0.4.1.patch"
    }
  }
}
